
<%= turbo_frame_tag user do %>
  <div class="grid grid-cols-10 border-t border-b py-4 mb-4">
    <div class="">
      <span class="material-symbols-outlined">
        person
      </span>
    </div>

    <div class="">
      <%= user.name %>
    </div>

    <div class="">
      <%= user.email %>
    </div>

    <div class="">
      <%= user.grade %>
    </div>

    <div class="col-end-9">
      <%= link_to '編集', edit_user_path(user), class: "rounded-lg py-3 px-5 bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>

    <div class="col-end-10">
      <%= link_to '削除', "#", class: "rounded-lg py-3 px-5 bg-red-500 text-white inline-block font-medium cursor-pointer" %>
    </div>
  </div>
<% end %>