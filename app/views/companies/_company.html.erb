
<%= turbo_frame_tag company do %>
  <div class="grid grid-cols-10 border-t border-b py-4 mb-4">
    <div class="">
      <span class="material-symbols-outlined">
        person
      </span>
    </div>

    <div class="">
      <%= company.name %>
    </div>

    <div class="">
      <%= company.description %>
    </div>

    <div class="col-end-9">
      <%= link_to '編集', edit_company_path(company), class: "rounded-lg py-3 px-5 bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>

    <div class="col-end-10">
      <%= link_to '削除', company, class: "rounded-lg py-3 px-5 bg-red-500 text-white inline-block font-medium cursor-pointer", data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" } %>
    </div>
  </div>
<% end %>